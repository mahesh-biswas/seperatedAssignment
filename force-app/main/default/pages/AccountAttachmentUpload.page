<apex:page standardController="Account" extensions="AccountControllerExtension" lightningStylesheets="True">
    <apex:pageBlock title="Account Detail:" >
        <apex:pageBlockSection columns="1">
            <apex:form >
                <apex:pageBlock >
                    <apex:detail subject="{!Account.Id}" relatedList="false"></apex:detail>
                    <apex:pageBlockButtons >
                        <apex:commandButton action="{!goToEditPage}" value="Custom Edit"/>
                    </apex:pageBlockButtons>
                </apex:pageBlock>
            </apex:form>
        </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:pageBlockTable value="{!Account.Attachments}" var="attachmentItr">
                <apex:column >
                    <apex:facet name="header">Actions</apex:facet>
                    <apex:outputLink value="{!URLFOR($Action.Attachment.Download,attachmentItr.Id)}">Download</apex:outputLink>
                    <apex:outputLink value="{!URLFOR($Action.Attachment.Delete,attachmentItr.Id)}" style="margin-left:10px;">Delete</apex:outputLink>
                </apex:column>
                <apex:column value="{!attachmentItr.Name}" title="FileName" />
                <apex:column value="{!Account.Name}" title="RelatedTo"/>
            </apex:pageBlockTable>
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>